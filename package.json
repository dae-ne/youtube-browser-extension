{
  "name": "youtube-extension",
  "scripts": {
    "lint:src": "eslint . --ext .ts",
    "lint:css": "stylelint **/*.css",
    "format": "prettier **/*.ts --write",
    "build-options": "vite build extension/options/ --outDir=../../dist/options/ --base ./ --emptyOutDir --minify",
    "build:background": "node scripts/build-background.mjs",
    "build:content-scripts": "node scripts/build-content-scripts.mjs",
    "build:content-styles": "node scripts/build-content-styles.mjs",
    "build:copy-manifest": "copyfiles -f ./extension/manifest.json ./dist",
    "build:copy-resources": "copyfiles -f ./extension/resources/* ./dist/resources",
    "build:copy-icons": "copyfiles -f ./assets/icon* ./dist/assets",
    "build": "npm run clean && npm run build-options && run-p build:*",
    "clean": "rimraf dist",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.3.0"
  }
}
