{
  "name": "YT Shorts to Video",
  "version": "1.0.0",
  "description": "Converts YouTube Shorts to Videos",
  "permissions": ["tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["youtube.js"]
    }
  ],
  "manifest_version": 3
}
