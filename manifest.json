{
  "name": "YT Shorts to Video",
  "version": "1.0.0",
  "description": "Converts YouTube Shorts to Videos",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["shorts.js"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["video.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://*.youtube.com/*"],
      "resources": ["video-play.svg"]
    }
  ],
  "manifest_version": 3
}
