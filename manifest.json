{
  "name": "YT extension",
  "version": "1.0.0",
  "description": "Chrome extension for YouTube",
  "permissions": ["tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["ads.css"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["shorts.js"],
      "css": ["shorts.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["video.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://*.youtube.com/*"],
      "resources": ["video-play.svg"]
    }
  ],
  "manifest_version": 3
}
